doctype html
html(lang="zh-Hant-TW")
  head
    meta(charset="utf-8")
    title= title
    link(rel='stylesheet', href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css", integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB", crossorigin="anonymous")
  body
    nav(aria-label="breadcrumb")
        ol.breadcrumb
            li.breadcrumb-item
                a(href="/") 官網
            li.breadcrumb-item.active(aria-current="page") 《海島紀元》預註冊報表
    .container
        .row
            .col-sm
                h3 每日人數
                table.table.table-bordered
                    thead
                        tr
                            th 日期
                            th 人數
                    tbody
                    each item in daily_data
                        tr
                            td= item.dDate
                            td= item.count
            .col-sm
                h3 國家分布
                table.table.table-bordered
                    thead
                        tr
                            th 國家
                            th 人數
                    tbody
                    each item in region_data
                        tr
                            td= item.country
                            td= item.count
